<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center|top"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="20dp"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/ed_name"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@xml/black_rounded_corner"
            android:textColor="@color/white"
            android:text="Yajneshwar Mnadal"
            android:gravity="center|left"
            android:paddingLeft="8dp" >
        </TextView>

        <EditText
            android:id="@+id/ed_location"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/ed_name"
            android:layout_marginTop="10dp"
            android:background="@xml/black_rounded_corner"
            android:hint="Location"
             android:textColor="@color/white"
            android:paddingLeft="8dp" >
        </EditText>

        <EditText
            android:id="@+id/ed_desc"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/ed_location"
            android:layout_marginTop="10dp"
            android:background="@xml/black_rounded_corner"
            android:gravity="top|left"
            android:hint="Description"
            android:padding="5dp"
            android:singleLine="false"
             android:textColor="@color/white"
            android:paddingLeft="8dp" >
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
             android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cccccc"
                android:textSize="14sp"
                android:text="Click Calender to enter Date" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/ll_datepicker"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/ed_desc"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/image_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calender" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:background="@xml/black_rounded_corner"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvDisplayDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/white"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textColor="#cccccc"
                android:textSize="14sp"
                android:text="Click Stop Wantch to enter Time" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_timepicker"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/ll_datepicker"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/image_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:background="@xml/black_rounded_corner"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvDisplayTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/white"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_timepicker"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@xml/white_rounded"
                android:layout_alignParentLeft="true"
                android:text="SUBMIT" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@xml/white_rounded"
                  android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="CANCEL" />
            
        </RelativeLayout>

       

  
</LinearLayout>